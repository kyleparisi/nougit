div#dialogs
	div#addRepo.dialog
		h2 New Repository
		form#new_repo
			label(for='new_repo_name') Name
			input(type='text', name='name', placeholder='MyNewRepository')
			label(for='new_repo_description') Description
			input(type='text', name='desc', placeholder='An app that does something really cool...')
		div.options
			a.button.cancel(href='#cancel') Cancel
			a.button.save#save_repo(href='#save') Save
	div#newbranch.dialog
		h2 Create Branch
		form#new_branch_form
			label(for='newbranchinput') Branch Name
			input(type='text', name='branch', placeholder='MyNewBranch')
		div.options
			a.button.cancel(href='#cancel') Cancel
			a.button.save#save_new_branch(href='#save') Save
	div#cloneRepo.dialog
		h2 Clone Repo
		form#clone_repo
			label(for='repo') Clone From Url
			input(type='text', name='repo', placeholder='http://127.0.0.1:8080/repositories/reponame')
		div.options
			a.button.cancel(href='#cancel') Cancel
			a.button.save#doclone(href='#save') Clone
		div.blockloader#clone_loader
	div#addremote.dialog
		h2 Add Remote
		form#add_remote_form
			label(for='new_remote_name') Remote Name
			input(type='text', name='remote', placeholder='MyRemoteName')
			label(for='new_remote_url') Url
			input(type='text', name='url', placeholder='http://127.0.0.1:8080/repositories/reponame')
		div.options
			a.button.cancel(href='#cancel') Cancel
			a.button.save#save_new_remote(href='#save') Save
	div#editremote.dialog
		h2 Edit Remote
		form#edit_remote_form
			label(for='edit_remote_name') Remote Name
			input(type='text', id='edit_remote_name', name='remote', disabled='disabled', placeholder='MyRemoteName')
			label(for='edit_remote_url') Url
			input(type='text', name='url', id='edit_remote_url', placeholder='http://127.0.0.1:8080/repositories/reponame')
		div.options
			a.button.cancel(href='#cancel') Cancel
			a.button.save#update_existing_remote(href='#save') Save
	div#revert.dialog
		h2 Revert Commit
		p Are you sure you want to revert to this commit?
		div#which_commit.code
		div.options
			a.button.cancel(href='#cancel') Cancel
			a.button.save#revert_commit(href='#save') Revert
	div#merge.dialog
		h2 Merge Branch
		p Are you sure you want to merge <span class="code" id="thisBranch"></span> with <span class="code" id="thatBranch"></span>?
		div.options
			a.button.cancel(href='#cancel') Cancel
			a.button.save#domerge(href='#save') Merge
	div#about.dialog
		h2 About
		p
			| <strong>Nougit</strong> - Version 0.5 <br />
			| Author: Gordon Hall (<a href="http://gordonwritescode.com">www.gordonwritescode.com</a>)
		div.options
			a.button.cancel(href='#cancel') Close
